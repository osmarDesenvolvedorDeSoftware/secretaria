{
  "id": null,
  "uid": "secretaria-overview",
  "title": "Secretaria - Operações",
  "tags": ["secretaria"],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Latência LLM (p95)",
      "id": 1,
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0},
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "single"}
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(secretaria_llm_latency_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"}
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Backlog da Fila RQ",
      "id": 2,
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 0},
      "options": {
        "legend": {"displayMode": "hidden"},
        "tooltip": {"mode": "single"}
      },
      "targets": [
        {
          "expr": "secretaria_queue_size",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Uso de Memória do Redis",
      "id": 3,
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 9},
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "single"}
      },
      "targets": [
        {
          "expr": "secretaria_redis_memory_usage_bytes{type=\"used\"}",
          "refId": "A"
        },
        {
          "expr": "secretaria_redis_memory_usage_bytes{type=\"warning_threshold\"}",
          "refId": "B"
        },
        {
          "expr": "secretaria_redis_memory_usage_bytes{type=\"critical_threshold\"}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Consumo de CPU do Flask",
      "id": 4,
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 9},
      "options": {
        "legend": {"displayMode": "hidden"},
        "tooltip": {"mode": "single"}
      },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"flask-app\"}[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {"mode": "palette-classic"}
        },
        "overrides": []
      }
    }
  ]
}
